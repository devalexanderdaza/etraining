{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"dev": {
			"cache": true,
      "dependsOn": ["^dev"],
      "steps": [
        {
          "name": "backend",
          "run": "yarn workspace apps/backend dev"
        },
        {
          "name": "frontend",
          "run": "yarn workspace apps/frontend dev"
        }
      ]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		}
	}
}
